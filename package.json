    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/http-errors": "^2.0.5",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
